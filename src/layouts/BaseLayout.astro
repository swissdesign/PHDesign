---
import '../styles/global.css';
import SponsorDock from "@swissdesign/sponsor-dock/SponsorDock.astro";
import { siteManifest } from "../site.manifest";

interface Props {
  lang?: string;
  title?: string;
}

const { lang = 'de', title = 'P. Heiniger Design' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
    <slot name="head" />
  </head>
  <body>
    <div id="app">
      <slot />
    </div>
    <SponsorDock {...siteManifest.sponsorDock} />
  </body>
</html>

<style is:global>
  #app {
    padding-bottom: calc(var(--dockSpace, 0px) + env(safe-area-inset-bottom));
  }
</style>
